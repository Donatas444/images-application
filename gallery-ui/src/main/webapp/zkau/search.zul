<window apply="org.zkoss.bind.BindComposer"
        viewModel="@id('vm') @init('com.gallery.galleryui.viewmodel.ImageVm')">
  <grid width="400px" model="@bind(vm.images)">
    <columns>
      <column label="name"/>
      <column label="description"/>
    </columns>
    <template name="model">
      <row>
        <label value="@bind(each.name)"/>
        <label value="@bind(each.description)"/>
      </row>
    </template>
  </grid>
</window>